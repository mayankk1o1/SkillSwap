{
  "name": "skillswap",
  "version": "1.0.0",
  "description": "MERN app for swapping skills",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "cross-env NODE_CONFIG_DIR=./backend/config nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.9"
  }
}